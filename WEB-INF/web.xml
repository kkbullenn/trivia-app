<web-app>
    <!-- Whisper AI Server Routes Start -->
    <servlet>
        <servlet-name>WhisperServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.WhisperServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WhisperServlet</servlet-name>
        <url-pattern>/whisper</url-pattern>
    </servlet-mapping>

    <!-- Strictly for audio transcribing  -->
    <servlet-mapping>
        <servlet-name>WhisperServlet</servlet-name>
        <url-pattern>/whisper/transcribe</url-pattern>
    </servlet-mapping>

    <!-- Moondream transription -->
    <servlet>
        <servlet-name>MoondreamServlet</servlet-name>
        <servlet-class>MoondreamServlet</servlet-class>  
    </servlet>
    <servlet-mapping>
        <servlet-name>MoondreamServlet</servlet-name>
        <url-pattern>/moondream</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoondreamServlet</servlet-name>
        <url-pattern>/moondream/caption</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoondreamServlet</servlet-name>
        <url-pattern>/moondream/summarize_video</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MoondreamServlet</servlet-name>
        <url-pattern>/moondream/ping</url-pattern>
    </servlet-mapping>


    <!-- Main Servlets -->

    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WhisperAnswerCheckerServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.WhisperAnswerCheckerServlet</servlet-class>
    </servlet>

    <!-- Audio transcribing to see if vocal answer is correct -->
    <servlet-mapping>
        <servlet-name>WhisperAnswerCheckerServlet</servlet-name>
        <url-pattern>/whisper/transcribe-answer</url-pattern>
    </servlet-mapping>
    <!-- Whisper AI Server Routes End -->

    <servlet>
        <servlet-name>MainDataServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.MainDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainDataServlet</servlet-name>
        <url-pattern>/main/data</url-pattern>
    </servlet-mapping>

    <!-- Category Lobbies Servlets -->
    <servlet>
        <servlet-name>CategoryLobbiesServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.CategoryLobbiesServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryLobbiesServlet</servlet-name>
        <url-pattern>/category-lobbies</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoryLobbiesDataServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.CategoryLobbiesDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CategoryLobbiesDataServlet</servlet-name>
        <url-pattern>/category-lobbies/data</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>JoinCategoryServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.JoinCategoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JoinCategoryServlet</servlet-name>
        <url-pattern>/join-category</url-pattern>
    </servlet-mapping>

    <!-- Quiz Page Servlets -->
    <servlet>
        <servlet-name>JoinQuizServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.JoinQuizServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>JoinQuizServlet</servlet-name>
        <url-pattern>/join-quiz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.QuizServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizServlet</servlet-name>
        <url-pattern>/quiz</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>QuizDataServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.QuizDataServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>QuizDataServlet</servlet-name>
        <url-pattern>/quiz/data</url-pattern>
    </servlet-mapping>

    <!-- M2M100 Translator proxy -->
    <servlet>
        <servlet-name>M2M100Servlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.M2M100Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/languages</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/translate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/translate/questions-answers</url-pattern>
    </servlet-mapping>

    <!-- login redirect -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- sign up redirect -->
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.SignUpServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <!-- Test Database Servlet (will be deleted)-->
    <servlet>
        <servlet-name>TestDbServlet</servlet-name>
        <servlet-class>com.triviaapp.servlets.TestDbServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TestDbServlet</servlet-name>
        <url-pattern>/test-db</url-pattern>
    </servlet-mapping>
    <!-- Test Database Servlet (will be deleted)-->
</web-app>
