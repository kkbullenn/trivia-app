    <servlet>
        <servlet-name>WhisperServlet</servlet-name>
        <servlet-class>src.main.java.com.triviaapp.servlets.WhisperServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WhisperServlet</servlet-name>
        <url-pattern>/whisper</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>WhisperServlet</servlet-name>
        <url-pattern>/whisper/transcribe</url-pattern>
    </servlet-mapping>

    <!-- M2M100 Translator proxy -->
    <servlet>
        <servlet-name>M2M100Servlet</servlet-name>
        <servlet-class>M2M100Servlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/languages</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/translate</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>M2M100Servlet</servlet-name>
        <url-pattern>/m2m100/translate/questions-answers</url-pattern>
    </servlet-mapping>

</web-app>
